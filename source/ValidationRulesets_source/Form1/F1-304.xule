assert F1.304.5 satisfied 
$rule_id = rule-name();

if set('1-F','1/3-Q').contains([covered @concept.local-name ='FormType'])
        skip
else
        $all_source = navigate summation-item descendants include start role "http://ferc.gov/form/2020-01-01/roles/Schedule/F1/ScheduleSalesOfElectricityByRateSchedulesTotals" returns  (source-name);

        $extra_calc = dict(list(RevenueFromSalesOfElectricityByRateSchedules,list(CommercialAndIndustrialSalesBilled,1)),
                        list(RevenueFromSalesOfElectricityByRateSchedulesIncludingUnbilledRevenue,list(CommercialAndIndustrialSales,1)),
                        list(RevenueFromSalesOfElectricityByRateSchedulesUnbilled,list(CommercialAndIndustrialSalesUnbilled,1)))

        for $concept_item in $all_source.to-set
        if $concept_item == none
                skip
        else
                $data = navigate summation-item children from $concept_item role "http://ferc.gov/form/2020-01-01/roles/Schedule/F1/ScheduleSalesOfElectricityByRateSchedulesTotals" returns  (target-name, weight)

                $data2 = list($extra_calc[$concept_item])

        /** The next part prevents double coundting of combined Commercial and Industrial **/

        /**Go and get the sub element values if reported on Schedule 300 **/

        $CommercialAndIndustrialSalesBilledSub = list([nonils @concept in list(SmallOrCommercialSalesElectricOperatingRevenueBilled, LargeOrIndustrialSalesElectricOperatingRevenueBilled)]);
        $CommercialAndIndustrialSalesSub = list([nonils @concept in list(SmallOrCommercialSalesElectricOperatingRevenue, LargeOrIndustrialSalesElectricOperatingRevenue)]);
        $CommercialAndIndustrialSalesUnbilledSub = list([nonils @concept in list(SmallOrCommercialSalesElectricOperatingRevenueUnbilled, LargeOrIndustrialSalesElectricOperatingRevenueUnbilled)]);


        $addend = sum(list(for $x in ($data + $data2).to-set
                                                $targetElement = $x[1];
                                                $targetWeight = $x[2];
                                                if $targetElement == CommercialAndIndustrialSalesBilled and $CommercialAndIndustrialSalesBilledSub.length > 0
                                                                skip
                                                else
                                                        if $targetElement == CommercialAndIndustrialSales and  $CommercialAndIndustrialSalesSub.length > 0
                                                                skip 
                                                        else 
                                                                if $targetElement == CommercialAndIndustrialSalesUnbilled and $CommercialAndIndustrialSalesUnbilledSub.length > 0
                                                                        skip
                                                                else
                                                                        [nonils @concept = $targetElement] * $targetWeight
                                                )
                                )
                                
        $addend_string = sum(list(for $x in ($data + $data2).sort
                                                $targetElement = $x[1];
                                                $factAmt = [nonils @concept = $targetElement].string;
                                                $weight =  if $x[2] == 1
                                                                                "+"
                                                                        else
                                                                        "-";
                                                $strLength = $targetElement.local-name.string.length;
                                                $pad = sum(list(for $x in range(150 - $strLength - $factAmt.length)
                                                                                " " 
                                                                                )
                                                                        )
                                        "" + $weight + "  \t" + $targetElement.local-name.string + $pad + $factAmt + " \n"
                                                )
                                )

        $sum2 = [@concept=$concept_item]

        $conceptReported = $concept_item;
        tolerance_for_decimals($sum2,$addend,$tolerance_factor)

message

"The value reported for {$conceptReported.local-name} is {$sum2} and the calculated value is {$addend} comprising the following values:

{$addend_string}

 Total Element : {$sum2.concept.name}
 Total Period : {$sum2.period}
 Total Value : {$sum2} 

Rule Id:{$rule_id}"

severity error
rule-focus $sum2


