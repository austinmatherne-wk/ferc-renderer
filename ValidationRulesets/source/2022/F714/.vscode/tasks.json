{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Form714 Validation Rules",
            "type": "shell",
            "command": "/Arelle/arellecmdline --plugins \"xule\" --xule-compile . --xule-rule-set ../compile/ValidationRuleset_Form714.zip"

        },
        {
            "label": "Validate Sample Filing",
            "type": "shell",
            "command": "/Arelle/arellecmdline --plugins \"xule\" --xule-rule-set ../compile/ValidationRuleset_Form714.zip -f ../../SampleInstances/Sample_Form_714.xbrl  -v --xule-time .005 --xule-debug --noCertificateCheck --logFile ../test-results/Sample-f714.xml --packages /Users/${input:user_name}/Downloads/Form_714-2020-01-01-${input:package_num}_package.zip"

        }
    ],
    "inputs":[
        {
            "id":"package_num",
            "description": "Number of the taxonomy package",
            "default": "123",
            "type": "promptString"
        },
        {
            "id":"user_name",
            "description": "user name to find downloads folder",
            "default": "campbell.pryde",
            "type": "promptString"
        }

    ]
}

