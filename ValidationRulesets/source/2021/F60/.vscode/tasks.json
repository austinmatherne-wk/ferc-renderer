{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Form60 Validation Rules",
            "type": "shell",
            "command": "/Arelle/arellecmdline --plugins \"xule\" --xule-compile . --xule-rule-set ../compile/ValidationRuleset_Form60.zip",
            "problemMatcher": []
        },
        {
            "label": "Validate Sample Filing",
            "type": "shell",
            "command": "/Arelle/arellecmdline --plugins \"xule\" --xule-rule-set ../compile/ValidationRuleset_Form60.zip -f ../../SampleInstances/Sample_Form_60.xbrl  -v --xule-time .005 --xule-debug --noCertificateCheck --logFile ../test-results/Sample-f60.xml --packages ../../Packages/Form_60-2021-01-01-${input:package_num}_package.zip"
        },
        {
            "label": "Run a single rule",
            "type": "shell",
            "command": "/Arelle/arellecmdline --plugins \"xule\" --xule-rule-set ../compile/ValidationRuleset_Form60.zip -f ../../SampleInstances/Sample_Form_2.xbrl  -v --xule-time .005 --xule-debug --noCertificateCheck --logFile ../test-results/Sample-f60.xml --packages ../../Packages/Form_60-2021-01-01-${input:package_num}_package.zip --xule-run-only ${input:rule_num}"
        }
    ],
    "inputs":[
        {
            "id":"package_num",
            "description": "Number of the taxonomy package",
            "default": "4",
            "type": "promptString"
        },
        {
            "id":"user_name",
            "description": "user name to find downloads folder",
            "default": "campbell.pryde",
            "type": "promptString"
        },
        {
            "id":"rule_num",
            "description": "rule number",
            "default": "FERC.F60.1.11",
            "type": "promptString"
        }

    ]
}